{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Frontend",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "start-angular",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/HackerNewsFrontend",
            "sourceMaps": true
        },
        {
            "name": "Run API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/HackerNewsApi/bin/Debug/net9.0/HackerNewsApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HackerNewsApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}