{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-angular",
            "type": "shell",
            "command": "ng serve",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/HackerNewsFrontend"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc-watch"],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/HackerNewsApi/HackerNewsApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/HackerNewsApi/HackerNewsApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/HackerNewsApi/HackerNewsApi.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}